{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../../",
  "roots": ["<rootDir>/src", "<rootDir>/tests"],
  "testEnvironment": "node",
  "testRegex": "/unit/.*\\.spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@src/(.*)$": "<rootDir>/src/$1"
  }
}
