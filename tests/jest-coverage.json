{
  "moduleFileExtensions": ["js", "ts"],
  "rootDir": "../",
  "roots": ["<rootDir>/src", "<rootDir>/tests"],
  "testRegex": "/.*\\.spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@src/(.*)$": "<rootDir>/src/$1"
  },
  "collectCoverage": true,
  "maxWorkers": 1,
  "collectCoverageFrom": ["src/**/*.{ts,js}", "!tests"]
}
